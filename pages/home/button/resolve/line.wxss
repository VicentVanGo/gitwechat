page{
  background: #ffffff;
}
.title {
	text-align: center;
	position: relative;
	margin-top: 2;    
	margin-bottom: 0rpx;
}
.back-btn {
	position: absolute;
	left: 20rpx;
	top: 0;
}
.swiper-tab{
	width: 100%;
  background: #f3f7f7;
  opacity: 1;
	border-bottom: 0rpx solid #4169E1;
	text-align: center;
	line-height: 70rpx;
  }
.swiper-tab-list{  font-size: 35rpx;
    display: inline-block;
	width: 33.33%;
	color: #777777;
}
.on{ color: #4169E1;
	border-bottom: 0rpx solid #4169E1;}
 
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }
.swiper-box view{
	text-align: center;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 90rpx 5rpx  0rpx 5rpx;
  box-sizing: border-box;
} 
.select_box{
  background: #fff;
  width: 80%;
  margin: 0rpx;
  height:100rpx;
  position: relative;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border:1px  solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0rpx;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
  padding: 0rpx 40rpx;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 70rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #f3f7f7;
  opacity: 1;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 70rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 0rpx;
}